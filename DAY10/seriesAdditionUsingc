#include <stdio.h>
#include <stdlib.h>

int main()
{
    int i, N, sum;

    printf("Enter the value for N: ");
    scanf("%d", &N);

    sum = 0;

    for(i = 0; i <= N; i++)
        sum += i;

    printf("\nSum of total numbers is: %d", sum);


    return 0;
}
